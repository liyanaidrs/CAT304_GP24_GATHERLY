<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/recImage"
            android:layout_width="112dp"
            android:layout_height="122dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_image_24"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

        <TextView
            android:id="@+id/recTitle"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_below="@+id/recImage"
            android:layout_marginStart="19dp"
            android:layout_marginTop="-130dp"
            android:layout_toEndOf="@id/recImage"
            android:text="Title"
            android:textColor="@color/emeraldgreen"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/recDesc"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/recTitle"
            android:layout_marginStart="18dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@id/recImage"
            android:maxLines="1"
            android:text="Desc"
            android:textColor="@color/emeraldgreen"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/recLang"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/recTitle"
            android:layout_marginStart="19dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/recImage"
            android:maxLines="1"
            android:text="Organiser"
            android:textColor="@color/emeraldgreen"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/recDate"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/recTitle"
            android:layout_marginStart="16dp"
            android:layout_marginTop="65dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/recImage"
            android:maxLines="1"
            android:text="Date"
            android:textColor="@color/emeraldgreen"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/recParticipant"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/recTitle"
            android:layout_marginStart="15dp"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/recImage"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/emeraldgreen"
            android:textSize="14sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>